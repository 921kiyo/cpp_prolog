#include <iostream>
#include <cstring>
#include "two_d.h"

using namespace std;

void insert_n(char array[][N], int row){
  for(int i = 0; i< row; i++){
    cout << "Type in " << N << " values for row " << i << " separated by spaces: ";
    for(int x = 0; x< N; x++){
      cin >> array[i][x]; 
    }
  }
}

void insert_r(char array[][R], int row){
  for(int i = 0; i< row; i++){
    cout << "Type in " << " values for row " << i << " separated by spaces: ";
    for(int x = 0; x< R; x++){
      cin >> array[i][x];
    }
  }
}

void display_n(char array[][N], int row){
  for(int i = 0; i< row; i++){
    for(int x = 0; x < N; x++){
      cout << array[i][x];
    }
    cout << "\n";
  }
}

void display_r(char array[][R], int row){
  for(int i = 0; i< row; i++){
    for(int x = 0; x < R; x++){
      cout << array[i][x];
    }
    cout << "\n";
  }
}
